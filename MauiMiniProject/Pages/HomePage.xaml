<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiMiniProject.Pages.HomePage"
             Title="HomePage">
    <VerticalStackLayout Spacing="25" Padding="30">
        <Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" 
            FontSize="24"/>

        <!-- Menu Buttons -->
        <Button Text="Profile"
                HorizontalOptions="Center"
                Clicked="OnProfileButtonClicked"/>

        <Button Text="View Registered Courses"
                HorizontalOptions="Center"
                Clicked="OnRegisteredCoursesButtonClicked"/>

        <Button Text="Search for Courses"
                HorizontalOptions="Center"
                Clicked="OnSearchCoursesButtonClicked"/>

        <Button Text="Withdraw from Course"
                HorizontalOptions="Center"
                Clicked="OnWithdrawCourseButtonClicked"/>
    </VerticalStackLayout>
</ContentPage>
