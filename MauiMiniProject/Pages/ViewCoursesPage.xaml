<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
              xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
              x:Class="MauiMiniProject.Pages.ViewCoursesPage"
              xmlns:viewmodel="clr-namespace:MauiMiniProject.ViewModel"
              xmlns:model="clr-namespace:MauiMiniProject.Model"
              x:DataType="viewmodel:ViewCoursesViewModel"
              Shell.NavBarIsVisible="False">
 
     <Grid Padding="0">
         <!-- กำหนดแถว -->
         <Grid.RowDefinitions>
             <RowDefinition Height="70"/> 
             <RowDefinition Height="*"/>  
         </Grid.RowDefinitions>
 
         <!-- Header Section -->
         <Grid BackgroundColor="Yellow"
               HeightRequest="70"
               VerticalOptions="Start"
               Padding="10"
               ColumnDefinitions="*, Auto"
               Grid.Row="0"> 
             <Label Text="ข้อมูลการลงทะเบียนเรียน"
                    FontSize="24"
                    FontAttributes="Bold"
                    TextColor="Black"
                    VerticalOptions="Center"
                    HorizontalOptions="Start"
                    Grid.Column="0"/>
         </Grid>
 
         <!-- Main Content -->
         <ScrollView Grid.Row="1"> 
             <VerticalStackLayout>
                 <CollectionView ItemsSource="{Binding Students}">
                     <CollectionView.ItemTemplate>
                         <DataTemplate x:DataType="{x:Type model:Student}">
                             <Border Padding="10">
                                 <Border.GestureRecognizers>
                                     <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:ViewCoursesViewModel}}, Path=ClickCommand}"
                                                           CommandParameter="{Binding Sid}"/>
                                 </Border.GestureRecognizers>
                                 <VerticalStackLayout>
 
                                     <CollectionView ItemsSource="{Binding Year}">
                                         <CollectionView.ItemTemplate>
                                             <DataTemplate x:DataType="{x:Type model:Year}">
                                                 <Border Padding="5" Margin="0,5">
                                                     <VerticalStackLayout>
                                                         <Label Text="{Binding YearNumber}" FontAttributes="Bold" FontSize="20" />
 
                                                         <CollectionView ItemsSource="{Binding CoursesYear}">
                                                             <CollectionView.ItemTemplate>
                                                                 <DataTemplate x:DataType="{x:Type model:CoursesYear}">
                                                                     <Border Padding="5" Margin="0,5">
                                                                         <VerticalStackLayout>
                                                                             <Label Text="Term 1 Courses" FontAttributes="Italic" FontSize="16" />
                                                                             <CollectionView ItemsSource="{Binding RegisteredTerm1}">
                                                                                 <CollectionView.ItemTemplate>
                                                                                     <DataTemplate x:DataType="{x:Type model:RegisteredTerm}">
                                                                                         <Label Text="{Binding C_name}" />
                                                                                     </DataTemplate>
                                                                                 </CollectionView.ItemTemplate>
                                                                             </CollectionView>
 
                                                                             <Label Text="Term 2 Courses" FontAttributes="Italic" FontSize="16" />
                                                                             <CollectionView ItemsSource="{Binding RegisteredTerm2}">
                                                                                 <CollectionView.ItemTemplate>
                                                                                     <DataTemplate x:DataType="{x:Type model:RegisteredTerm}">
                                                                                         <Label Text="{Binding C_name}" />
                                                                                     </DataTemplate>
                                                                                 </CollectionView.ItemTemplate>
                                                                             </CollectionView>
 
                                                                             <Label Text="Term 3 Courses" FontAttributes="Italic" FontSize="16" />
                                                                             <CollectionView ItemsSource="{Binding RegisteredTerm3}">
                                                                                 <CollectionView.ItemTemplate>
                                                                                     <DataTemplate x:DataType="{x:Type model:RegisteredTerm}">
                                                                                         <Label Text="{Binding C_name}" />
                                                                                     </DataTemplate>
                                                                                 </CollectionView.ItemTemplate>
                                                                             </CollectionView>
                                                                         </VerticalStackLayout>
                                                                     </Border>
                                                                 </DataTemplate>
                                                             </CollectionView.ItemTemplate>
                                                         </CollectionView>
                                                     </VerticalStackLayout>
                                                 </Border>
                                             </DataTemplate>
                                         </CollectionView.ItemTemplate>
                                     </CollectionView>
                                 </VerticalStackLayout>
                             </Border>
                         </DataTemplate>
                     </CollectionView.ItemTemplate>
                 </CollectionView>
             </VerticalStackLayout>
         </ScrollView>
     </Grid>
 </ContentPage> 